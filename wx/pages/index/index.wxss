.login_button{
  position: fixed;
  width: 750rpx;
  height: 10%;
  bottom: 0rpx;
  left: 0rpx;
  border-top: 0.5px solid #AAAAAA;
}
.login_button>button{
  width: 750rpx;
}
.add_image{
  width: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
}
.main{
  width: 750rpx;
  height: 90%;
}
scroll-view{
  width: 750rpx;
  height: 99%;
}
.container{
  width: 90%;
  position: relative;
  left: 5%;
  right: 5%;
}
.message_container{
  width: 100%;
  margin-bottom: 20px;
}
.message_time{
  font-size: 12px;
  color: rgb(170, 170, 170);
  
}
.message_txt{
  display: -webkit-box;
  font-size:28rpx;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  /* -webkit-line-clamp:3; */
  overflow: hidden;
  text-overflow:ellipsis;
 
}
.flex-item{
  width: 750rpx;
  height:120px;
  display: flex;
  flex-wrap: wrap;
}
.flex-item > image {
  width: 40px;
  height: 40px;
  margin: 10px 20px;
}
.messsage_img{
  width: 100%;
}